<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RestaurantGeneratorClient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RestaurantGeneratorClient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RestaurantGeneratorClient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RestaurantGeneratorClient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom Button Style -->
    <style name="custom_button_style_1" parent="Widget.AppCompat.Button">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">9.5dp</item>
        <item name="android:textColor">@color/default_dark_color_1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/spinner_box_border</item>
    </style>

    <style name="custom_text_style_title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/default_light_color_2</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>